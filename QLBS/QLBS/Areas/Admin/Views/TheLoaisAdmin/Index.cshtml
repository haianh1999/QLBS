@model IEnumerable<QLBS.Models.TheLoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thể Loại</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>

@using (Html.BeginForm("index", "TheLoaisAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <label>Thêm File Excel</label>
        @Html.TextBox("file", "", new { type = "file" }) <br />

        <input type="submit" value="Cập Nhật" class="btn btn-danger" />
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenTheLoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTheLoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTheLoai }) |
                @Html.ActionLink("Thông tin", "Details", new { id = item.MaTheLoai }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTheLoai })
            </td>
        </tr>
    }

</table>
