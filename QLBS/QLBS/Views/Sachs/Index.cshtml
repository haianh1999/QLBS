@model IEnumerable<QLBS.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <p>
        <div class="form-group d-flex">
            <label style="color:blue" class="control-label">Tìm Kiếm:</label>
            <input class="form-control" name="searchString" placeholder="Nhập Tên Sách" />
        </div>
        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
    </p>
}

<table class="table">
    <tr>
        <th>
            Tên Tác Giả
        </th>
        <th>
            Tên Thể Loại
        </th>
        <th>
            Tên Sách
        </th>
        <th>
            Giá
        </th>
        <th></th>
    </tr>

    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TacGias.TenTacGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TheLoais.TenTheLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaSach)
        </td>
        <td>
            @Html.ActionLink("Thông tin", "Details", new { id = item.IDSach })
        </td>
    </tr>
    }

</table>
